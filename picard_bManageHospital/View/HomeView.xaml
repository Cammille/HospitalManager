<Window x:Class="picard_bManageHospital.View.HomeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Views="clr-namespace:picard_bManageHospital.View"
        xmlns:Behaviours="clr-namespace:picard_bManageHospital"
        Title="Gestionnaire" Height="768" Width="800">
    
    <Window.Resources>
        <DataTemplate x:Key="AllPatientView">
            <Views:AllPatientView />
        </DataTemplate>
        
        <Style x:Key="StyleMainGrid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding CloseSignal}" Value="true">
                    <Setter Property="Behaviours:WindowCloseBehaviour.Close" Value="true"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Style="{StaticResource StyleMainGrid}">

        <StackPanel Grid.Row="0">
            <Button Content="Déconnexion" Width="100" HorizontalAlignment="Right" Command="{Binding DisconnectCommand}" />
        </StackPanel>

        <ContentControl Content="{Binding AllPatientVM}" ContentTemplate="{StaticResource AllPatientView}" />
    </Grid>
</Window>
